<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="720.0" prefWidth="960.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.iot_dash.LoginController">
   <VBox fx:id="CredBox" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="400.0" prefWidth="720.0">
      <children>
          <TextField fx:id="usernameField" maxWidth="300.0" onKeyReleased="#handleKeyRelease" prefHeight="50.0" prefWidth="330.0" promptText="Username">
              <font>
                  <Font size="24.0" />
              </font>
            <VBox.margin>
               <Insets bottom="10.0" top="100.0" />
            </VBox.margin>
            <padding>
               <Insets left="20.0" />
            </padding>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
          </TextField>
          <PasswordField fx:id="passwordField" maxWidth="300.0" onKeyReleased="#handleKeyRelease" prefHeight="50.0" prefWidth="300.0" promptText="Password">
              <font>
                  <Font size="24.0" />
              </font>
            <padding>
               <Insets left="20.0" />
            </padding>
            <VBox.margin>
               <Insets bottom="10.0" />
            </VBox.margin>
          </PasswordField>
         <Label fx:id="WarningLogin" alignment="CENTER" prefHeight="50.0" prefWidth="350.0" visible="false" />
          <Button id="loginButton" fx:id="loginButton" onAction="#handleLoginButtonAction" prefHeight="40.0" prefWidth="150.0" text="Login" textAlignment="CENTER" visible="false">
              <font>
                  <Font name="System Bold" size="18.0" />
              </font>
          </Button>
      </children>
      <VBox.margin>
         <Insets bottom="50.0" left="275.0" right="275.0" top="150.0" />
      </VBox.margin>
   </VBox>
   <Label fx:id="versionlabel" alignment="CENTER" prefHeight="20.0" prefWidth="100.0" text="Version: 24W25-C " textFill="WHITE" />
</VBox>
